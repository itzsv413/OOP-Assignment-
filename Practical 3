 	}
}
class Assistant_Project_Manager extends Empolyee{
Scanner s=new Scanner(System.in);
	double gross,net,BP,da=97,hra=10,pf=12,scf=0.1;
	@Override
	void getData() {
		 System.out.println("Enter ID of Assiant project manager: ");
