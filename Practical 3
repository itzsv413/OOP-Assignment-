	 BP=s.nextInt();
 }
 public void calculate_salary(){
 gross=BP+(BP*(da+hra))/100;
 net=gross-(BP*(pf+scf))/100;
 }
 
 @Override
 void display() {
	 System.out.println("ID of team leader: "+id);
